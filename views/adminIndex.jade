html
	head
		link(rel='stylesheet', href='/css/bootstrap.css')
		link(rel='stylesheet', href='/css/docs.css')
		script(src='/js/jquery-1.9.1.min.js', type='text/javascript')
		script(src='/js/bootstrap.min.js', type='text/javascript')
	body

		table(class="table table-striped table-condensed")
			thead
			tbody(data-bind="foreach: lists")
				tr
					td
						span(data-bind="text: title")
					td
						span(data-bind="text: _id.toString()")
					td
						table(data-bind="foreach: owners", style="border: 0;")
							tr(style="border: 0;")
								td(data-bind="text: name",style="border: 0;")
					td
						table(data-bind="foreach: tasks", style="border: 0;")
							tr(style="border: 0;")
								td(data-bind="text: title",style="border: 0;")
								td(data-bind="text: points",style="border: 0;")
								td(data-bind="css: {'glyphicon glyphicon-ok': completed}",style="border: 0;")

		h4 Log
		table(class="table table-striped table-condensed")
			thead
			tbody(data-bind="foreach: logEntries")
				tr
					td
						span(data-bind="text: level")
					td
						span(data-bind="text: text")
					td
						span(data-bind="text: date")

	script(src='/knockout/knockout-2.2.1.debug.js', type='text/javascript')
	script(src='/js/adminList.js', type='text/javascript')